{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "skipLibCheck": true,
    "sourceMap": false,
    "declaration": true,
    "removeComments": false,
  },
  "include": [
    "src/*",
    "src/**/*"
  ],
  "exclude": [
    "**/__mocks__/**",
    "test/*",
    "test/**"
  ]
}
